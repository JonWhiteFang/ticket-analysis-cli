    "_comment": "Security and data protection settings",
    "strict_validation": true,
    "_validation_description": "Enable strict input validation and sanitization",
    
    "pii_detection": true,
    "_pii_description": "Automatically detect and remove personally identifiable information",
    
    "secure_temp_files": true,
    "_temp_files_description": "Use secure permissions for temporary files",
    
    "memory_cleanup": true,
    "_memory_description": "Securely clear sensitive data from memory after use"
