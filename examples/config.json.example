  "output": {
    "_comment": "Output formatting and display options",
    "default_format": "table",
    "_format_options": ["table", "json", "csv", "html"],
    "_format_description": "Default output format when not specified via CLI",
    
    "max_results": 1000,
    "_max_results_description": "Maximum number of tickets to retrieve in a single query (1-10000)",
    
    "sanitize_output": true,
    "_sanitize_description": "Automatically remove PII and sensitive data from all outputs",
    
    "color_output": true,
    "_color_description": "Enable color coding in CLI output (disable for non-interactive use)",
    
    "progress_indicators": true,
    "_progress_description": "Show progress bars during long-running operations",
    
    "output_directory": "./reports",
    "_output_dir_description": "Default directory for saving report files (relative or absolute path)"
  },
  
  "authentication": {
    "_comment": "Authentication and security settings",
    "timeout_seconds": 60,
    "_timeout_description": "Maximum time to wait for authentication operations (30-300 seconds)",
    
    "max_retry_attempts": 3,
    "_retry_description": "Number of retry attempts for failed authentication (1-5)",
    
    "check_interval_seconds": 300,
    "_check_interval_description": "How often to verify authentication status (60-3600 seconds)",
    
    "session_duration_hours": 8,
    "_session_description": "Maximum authentication session duration (1-24 hours)"
